<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Book Libray</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/styles/styles.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Lato:wght@400;900&family=Open+Sans:wght@300;400&display=swap" rel="stylesheet">
</head>
<body>

  <header class="p-3 mb-3 border-bottom">
    <div class="container">
      <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
        <a href="/public/assets/book-open-svgrepo-com.svg" class="d-flex align-items-center mb-2 mb-lg-0 link-body-emphasis text-decoration-none">
          <svg class="bi me-2" width="40" height="32" role="img" aria-label="Bootstrap"><use xlink:href="#bootstrap"></use></svg>
        </a>

        <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
          <li><a href="/" class="nav-link px-2 link-secondary">Home</a></li>
          <li><a href="/addNotes" class="nav-link px-2 link-body-emphasis">Add Notes</a></li>
          
        
         
        </ul>

        <form class="col-12 col-lg-auto mb-3 mb-lg-0 me-lg-3" role="search">
          <input type="search" class="form-control" placeholder="Search..." aria-label="Search">
        </form>
        <div class="dropdown show">
          <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Sort Notes
          </a>
          
          <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
            <a class="dropdown-item" href="/?sort=desc">Most Recent First</a>
            <a class="dropdown-item" href="/">Oldest First</a>
            <a class="dropdown-item" href="#">Highest Rated</a>
          </div>
        </div>
              
        </div>
      </div>
    </div>
  </header>

  <div id="blackBanner"> <p id="pBanner"></p></div>
  
  <section>

    <div class="flex-container">

    <% for (const item of items) { %>

      <div class="flex-item" id="cards">
        <img src="<%= item.thumb %>" alt="book cover" id="bookImg">
        <p class="card-heading"><%= item.title %></p>
        <p class="card-summary"><%= item.sum %></p>
        <p><%= new Date(item.timestamp).toLocaleString('en-US', { month: 'short', day: 'numeric', hour: 'numeric', minute: 'numeric' }) %></p>
        <a href="/details?id=<%= item.id %>&title=<%= encodeURIComponent(item.title) %>&summary=<%= encodeURIComponent(item.sum) %>&timestamp=<%= item.timestamp %>&thumb=<%= encodeURIComponent(item.thumb) %>" class="btn btn-dark" id="viewBtn">View</a>
      </div>
      
      


      <% } %>

    </div>


    <div class="container" style="margin-top: 250px;">
      <footer class="d-flex flex-wrap justify-content-between align-items-center py-3 my-4 border-top" style="margin-top: 100px;">
        <p class="col-md-4 mb-0 text-body-secondary">Â© 2023 BookNotes </p>
    
        <a href="/" class="col-md-4 d-flex align-items-center justify-content-center mb-3 mb-md-0 me-md-auto link-body-emphasis text-decoration-none">
          <svg class="bi me-2" width="40" height="32"><use xlink:href="/public/assets/book-open-svgrepo-com.svg" ></use></svg>
        </a>
    
        <ul class="nav col-md-4 justify-content-end">
         
        </ul>
      </footer>
    </div>
    
  </section>





  <script>
    // Updated JavaScript function
    function showDropdown() {
      const dropdownMenu = document.getElementById('dropdownMenuLink');
      dropdownMenu.click(); // Programmatically trigger the click event
    }
  </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>




